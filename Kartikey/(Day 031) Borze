// https://codeforces.com/problemset/problem/32/B



#include <bits/stdc++.h>
using namespace std;
#define ll long long int


int main() {

      #ifndef ONLINE_JUDGE
        freopen("input.txt", "r", stdin);
        freopen("output.txt" , "w", stdout);
      #endif
        
        char dot = '.';
        char dash  = '-';
        char one = '-' + '.';
        char two = '-' + '-';
        char temp;
        
        string s;
        cin >> s;
        for(int i =0; i<s.size(); i++){
                    if(s[i] == dot){
                        cout << "0";
                        continue;
                    }
                    if(s[i] == dash){
                    temp =  s[i] + s[i+1];
                    if(temp == one){
                        cout << "1";
                        i++;
                        continue;
                    }
                    if( temp == two){
                        cout << "2";
                        i++;
                        continue;
                    } 
                }
                
                
            
        }
        
       
        }
    
        
   
   
   


       
             
       
       
       
        
  
    
    
    
    
    
    
    
       
    
    
    




 
