#include <bits/stdc++.h>
using namespace std;
#define ll long long int
#define fr for(int i =0; i<n; i++)



int main() {

      #ifndef ONLINE_JUDGE
        freopen("input.txt", "r", stdin);
        freopen("output.txt" , "w", stdout);
      #endif
        
        ll n;
        cin  >> n;
        ll count =0;
        string s;
        cin >> s;
            for(int i =0; i<n; i++){
            
            if(s[i] == s[i+1]){
                count++;
            }
            
        }
        cout << count << endl;
       
        
      
      
      
      
      
      
      } 
      
        
        
      
         
    
    
  
    
        
        
   
        
        
        
        
        
        
        
        
       
       
        
    
        
   
   
   


       
             
       
       
       
        
  
    
    
    
    
    
    
    
       
    
    
    




 
