// https://leetcode.com/problems/reverse-integer/

class Solution {
public:
        int reverse(int x) {
        int ans = 0;

	while(x != 0)
        {
        	int m = x % 10;

        	if( (ans > INT_MAX/10) || (ans < INT_MIN/10) ){
        		return 0;
                
            }

        	ans = ans * 10 + m;
        	x /= 10;
        }

        return ans;
    }
};
