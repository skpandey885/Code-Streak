// https://codeforces.com/problemset/problem/266/B



#include <bits/stdc++.h>
using namespace std;
#define ll long long int


int main() {

      #ifndef ONLINE_JUDGE
        freopen("input.txt", "r", stdin);
        freopen("output.txt" , "w", stdout);
      #endif
        ll n, t;
        cin >> n >> t;
        string s; cin>> s;
        while(t--){
            for(int i =0; i<n-1; i++){
                if(s[i] == 'B' && s[i+1] == 'G'){
                    swap(s[i], s[i+1]);
                    i++;
                }
            }
        }
        
        cout << s << endl;
        return 0;
        
        
   
   
   


       
             
       
       
       
        
  
    
    }
    
    
    
    
    
       
    
    
    




 


