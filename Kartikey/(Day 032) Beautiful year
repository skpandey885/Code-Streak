//   https://codeforces.com/problemset/problem/271/A

#include <bits/stdc++.h>
using namespace std;
#define ll long long int
#define fr for(int i =0; i<n; i++)


int main() {

      #ifndef ONLINE_JUDGE
        freopen("input.txt", "r", stdin);
        freopen("output.txt" , "w", stdout);
      #endif
        
        ll y;
        cin >> y;
        while(true)
        {
            y +=1;
            ll a= y/1000; // 1st digit
            ll b = y/100 %10; // 2nd digit
            ll c = y/10 % 10; // 3rd digit
            ll d = y %10; // 4th digit
            if(a != b && a!=c && a != d && b!=c && b!=d && c!=d){
                cout << y;
                return 0;
            }
        }
        return 0;
        
       
        }
    
        
   
   
   


       
             
       
       
       
        
  
    
    
    
    
    
    
    
       
    
    
    




 




