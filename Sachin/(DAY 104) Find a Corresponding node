https://leetcode.com/problems/find-a-corresponding-node-of-a-binary-tree-in-a-clone-of-that-tree/submissions/

class Solution {
    public final TreeNode getTargetCopy(final TreeNode original, final TreeNode cloned, final TreeNode target) {
        return getTargetCopyHelper(cloned, original, target);
        
    }
    
    public final TreeNode getTargetCopyHelper(TreeNode root, TreeNode original, TreeNode target) {
        if (root == null) {
            return null;
        }
        
        if (root.val == target.val) {
            return root;
        }
        
        TreeNode value1 = getTargetCopyHelper(root.left, original, target);
        TreeNode value2 = getTargetCopyHelper(root.right, original, target);
        
        if (value1 != null) {
            return value1;
        } 
        
        if (value2 != null) {
            return value2;
        }
        
        return null;
        
    }
}
